{% extends 'partials/_master_products.twig' %}

{% block main %}

    {% set ids = record.relation.products|join(" || ") %}
    {% setcontent relatedrecords = 'products' where { id: ids } allowpaging limit 12 %}
    
    <div>
        {% for product in relatedrecords %}
            <div class="product-preview">
                <a href="/{{ product.contenttype.singular_slug }}/{{ product.slug }}">
                    <h3 class="page-title">{{ product.title }}</h3>
                    {% for image in product.images %}
                        {% if loop.first %}
                            <img src="{{ paths.files }}{{ image.filename }}" alt="{{ image.filename }}" class="width100" />
                        {% endif %}
                    {% endfor %}
                </a>
                {{ include('partials/_recordfooter.twig') }}
            </div>
        {% endfor %}
        {{ pager('products') }}
    </div>

{% endblock main %}
