{% extends 'partials/_master_products.twig' %}

{% block main %}
    <div>
        {% for product in records %}
            <div class="product-preview w3-mobile w3-card">
                <a href="{{ product.link }}">
                    {% for image in product.images %}
                        {% if loop.first %}
                            <img src="{{ paths.files }}{{ image.filename }}" alt="{{ image.filename }}">
                        {% endif %}
                    {% endfor %}
                    <h3>{{ product.title }}</h3>
                </a>
                {% if product.discount != 0 %}
                    <span>{{ product.price }}$00 ECV</span>
                    <h2>{{ (product.price - (product.price * product.discount / 100))|round }}$00 ECV</h2>
                    <span class="w3-red" style="padding: 5px"><strong>{{ l('palavra:save')|capitalize }} {{ product.discount }}%</strong></span>
                {% else %}
                    <h2>{{ product.price }}$00 ECV</h2>
                {% endif %}
                {% setcontent subcategory = 'subcategories' where { id: product.subcategory } %}
                <p>
                    <a href="{{ subcategory.link }}">/ {{ subcategory.name }} /</a>
                </p>
                {{ include('partials/_recordfooter.twig') }}                
            </div>
        {% endfor %}
        {{ pager(template = 'partials/_sub_pager.twig') }}
    </div>

{% endblock main %}
